<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <!-- Support library compatibility -->
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:windowBackground">@color/bg_home</item>
    </style>

    <style name="CustomToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/actionbar</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar</item>
    </style>

    <style name="CustomTabs" parent="Widget.Design.TabLayout">

        <!-- tab indicator -->
        <item name="android:background">@color/actionbar_tab_unselected</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_tab_unselected</item>

        <item name="tabIndicatorColor">@color/actionbar_tab_focused</item>
        <item name="tabIndicatorHeight">4dip</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_tab_indicator</item>

        <item name="backgroundStacked">@color/actionbar_tab_selected</item>
        <item name="backgroundSplit">@color/actionbar_tab_selected</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarDivider">@null</item>

    </style>
</resources>